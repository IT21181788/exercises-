//  Write a program to input 3 integers and print the largest ad 
the smallest of the 3 numbers entered.
// Use this editor to write, compile and run your Java code online
import java.util.Scanner;
class HelloWorld {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in) ;
        System.out.println("Enter number 01:");
        int no1 = s.nextInt();
        
         System.out.println("Enter number 02:");
        int no2 = s.nextInt();
        
         System.out.println("Enter number 03:");
        int no3 = s.nextInt();
        
        //large
        if(no1<no2 & no2>no3){
            System.out.println("The largest number is: "+no2);
        }
        else  if (no1>no2 & no1>no3){
            System.out.println("The largest number is: "+no1);
        }    
        else {
            System.out.println("The largest number is: "+no3);
        }
        
        System.out.println("\n");
        //min
        
        if(no1>no2 & no2<no3){
            System.out.println("The smallest number is: "+no2);
        }
        else  if (no1<no2 & no1<no3){
            System.out.println("The smallest number is: "+no1);
        }    
        else {
            System.out.println("The smallest number is: "+no3);
        }
    }
}
